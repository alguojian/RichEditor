<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/text_editor_center_popup_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10.0dip">

    <ImageView
        android:id="@+id/iv_text_editor_left"
        android:layout_width="38.0dip"
        android:layout_height="38.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/text_center_default_normal_popup" />

    <ImageView
        android:id="@+id/iv_text_editor_mid"
        android:layout_width="38.0dip"
        android:layout_height="38.0dip"
        android:layout_marginLeft="12.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/text_center_center_normal_popup" />

    <ImageView
        android:id="@+id/iv_text_editor_right"
        android:layout_width="38.0dip"
        android:layout_height="38.0dip"
        android:layout_marginLeft="12.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/text_center_right_normal_popup" />
</LinearLayout>